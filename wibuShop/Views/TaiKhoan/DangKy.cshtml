@model wibuShop.Models.TaiKhoan

@{ ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_Layout.cshtml"; }
<style>
    .alert {
        background: #ffdada;
    }

    #main {
        text-align: center;
    }
    .widget_shopping_cart_content a {
        text-decoration: none;
        font-size:40px;
        font-family:Calibri;
        margin-left:20px;
    }
    .cart-img-icon {
        width: 80px;
        height: 55px;
    }
    element.style{
        padding:0px;
    }
    .form-control1 {
        background-color: white;
        height: 30px;
        width: 300px;
        margin-top: 20px;
    }
    .text-danger {
        
        margin-top:20px;background-color:white;height:40px;color:black;vertical-align:middle;padding-top:20px;font-size:18px
    }
    .text-danger{
        color:red;
        font-size:15px;
        text-align:left;
        height:3px;
        padding-top:0px;
        margin-left:-180px;

    }
</style>
@using (Html.BeginForm())
{
@Html.AntiForgeryToken()
                <div class="container">
                    <div class="row d-flex justify-content-center align-items-center" style="border:solid;border-color:gainsboro;border-width:2px;width:400px;margin-left:37%">
                        <div class="col-lg-6">
                            <div class="auth-form-light text-left py-5 px-4 px-sm-5" style="text-align:center;">
                                <h2>Đăng ký tài khoản</h2>
                                <form class="pt-3">
                                 
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control1", @placeholder = "Họ và tên", id = "exampleInputUsername" } })<br />
                                            @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control1", @placeholder = "Email", id = "exampleInputEmail" } })<br />
                                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })                                     
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control1", @placeholder = "Mật Khẩu", id = "exampleInputPassword1" } })<br />
                                            @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control1", @placeholder = "Địa chỉ" } })<br />
                                            @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control1", @placeholder = "Số điện thoại" } })<br />
                                            @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="ĐĂNG KÝ" class="btn-block btn-primary btn-lg font-weight-medium auth-form-btn"  style="background-color:orange;height:35px;width:120px;margin-top:20px;font-weight:bold;margin-bottom:20px"/>
                                        </div>
                                    </div>
                                    <div class="text-center mt-4 font-weight-light">
                                        Đã có tài khoản? <a href="@Url.Action("Login","TaiKhoan")" class="text-primary" style="margin-top:50px;color:blue;text-decoration:none">Đăng nhập</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>}
<div style="margin-left:140px">
    @{
        Html.RenderAction("_Footer", "Home");
    }
</div>



