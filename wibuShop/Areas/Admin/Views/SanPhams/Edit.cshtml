@model wibuShop.Models.SanPham

@{ ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var ImagePath = "~/wwwroot/images/SanPham/" + Model.AnhSP; }
@using (Html.BeginForm("Edit", "SanPhams", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
@Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.MaSP)

                                                <div class="content-wrapper" style="padding:10px;margin:10px">
                                                    <div class="row">
                                                        <div class="col-md-12 grid-margin">
