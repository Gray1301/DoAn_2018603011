                                                            <div class="card-body">
                                                                <h4 class="card-title">Cập nhật thông tin sản phẩm</h4><br />
                                                                <form class="form-sample">

                                                                    <div class="row">
                                                                        <div class="col-md-6">
                                                                            <div class="form-group row">
                                                                                <label class="col-sm-3 col-form-label">@Html.LabelFor(model => model.AnhSP)</label>
                                                                                <div class="col-sm-9 d-flex justify-content-center align-items-center">
                                                                                    <img id="output" class="img-rounded" alt="Ảnh" width="150" height="150"
                                                                                         src="@Url.Content(ImagePath)" />
                                                                                    <br />
