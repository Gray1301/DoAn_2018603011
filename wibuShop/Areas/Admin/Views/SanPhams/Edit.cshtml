                                                                                    <input name="ImageFile" id="ufile" type="file" style="display: none;"
                                                                                           onchange="loadFile(event)" />
                                                                                </div>
                                                                                @Html.HiddenFor(model => model.AnhSP)
                                                                            </div>
                                                                        </div>
                                                                        <div class="col-md-6">
                                                                            <div class="form-group row">
                                                                                <label class="col-sm-3 col-form-label">Tên danh mục</label>
                                                                                <div class="col-sm-9">
                                                                                    @Html.DropDownList("MaDM", null, htmlAttributes: new { @class = "form-control" })
                                                                                    @Html.ValidationMessageFor(model => model.MaDM, "", new { @class = "text-danger" })
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                    <div class="row">
                                                                        <div class="col-md-6">
                                                                            <div class="form-group row">
                                                                                <label class="col-sm-3 col-form-label">@Html.LabelFor(model => model.Gia)</label>
                                                                                <div class="col-sm-9">
                                                                                    @Html.EditorFor(model => model.Gia, new { htmlAttributes = new { @class = "form-control" } })
                                                                                    @Html.ValidationMessageFor(model => model.Gia, "", new { @class = "text-danger" })
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                        <div class="col-md-6">
                                                                            <div class="form-group row">
                                                                                <label class="col-sm-3 col-form-label">@Html.LabelFor(model => model.TenSP)</label>
                                                                                <div class="col-sm-9">
                                                                                    @Html.EditorFor(model => model.TenSP, new { htmlAttributes = new { @class = "form-control" } })
                                                                                    @Html.ValidationMessageFor(model => model.TenSP, "", new { @class = "text-danger" })
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                        <div class="col-md-6">
                                                                            <div class="form-group row">
                                                                                <label class="col-sm-3 col-form-label">@Html.LabelFor(model => model.TacGia)</label>
                                                                                <div class="col-sm-9">
                                                                                    @Html.EditorFor(model => model.TacGia, new { htmlAttributes = new { @class = "form-control" } })
                                                                                    @Html.ValidationMessageFor(model => model.TacGia, "", new { @class = "text-danger" })
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                        <div class="col-md-6">
                                                                            <div class="form-group row">
                                                                                <label class="col-sm-3 col-form-label">@Html.LabelFor(model => model.NhaXuatBan)</label>
                                                                                <div class="col-sm-9">
                                                                                    @Html.EditorFor(model => model.NhaXuatBan, new { htmlAttributes = new { @class = "form-control" } })
                                                                                    @Html.ValidationMessageFor(model => model.NhaXuatBan, "", new { @class = "text-danger" })
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                    <div class="row">
                                                                        <div class="col-md-6">
                                                                            <div class="form-group row">
                                                                                <label class="col-sm-3 col-form-label">@Html.LabelFor(model => model.SoLuongTon)</label>
                                                                                <div class="col-sm-9">
                                                                                    @Html.EditorFor(model => model.SoLuongTon, new { htmlAttributes = new { @class = "form-control" } })
                                                                                    @Html.ValidationMessageFor(model => model.SoLuongTon, "", new { @class = "text-danger" })
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                        <div class="col-md-6">
                                                                            <div class="form-group row">
                                                                                <label class="col-sm-3 col-form-label">@Html.LabelFor(model => model.GiamGia)</label>
                                                                                <div class="col-sm-9">
                                                                                    @Html.EditorFor(model => model.GiamGia, new { htmlAttributes = new { @class = "form-control" } })
                                                                                    @Html.ValidationMessageFor(model => model.GiamGia, "", new { @class = "text-danger" })
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>   
                                                               
                                                                    <div class="d-flex justify-content-center">
                                                                        <a class="nav-link mr-2" href="@Url.Action("Index","SanPhams")">
                                                                            <span class="menu-title btn btn-outline-danger btn-fw">QUAY LẠI</span>
                                                                        </a>
                                                                        <div class="nav-link ml-2">
                                                                            <input type="submit" value="LƯU LẠI" class="btn btn-default menu-title btn btn-outline-success btn-fw luulai" />
                                                                        </div>
                                                                    </div>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>}
@if (ViewBag.Error != null)
{
<br />
                <div class="alert alert-danger" role="alert">@ViewBag.Error</div>}

<script>
    var loadFile = function (event) {
        var image = document.getElementById("output");
        image.src = URL.createObjectURL(event.target.files[0]);
    };
</script>


<script src="~/Scripts/jquery-3.4.1.js"></script>
