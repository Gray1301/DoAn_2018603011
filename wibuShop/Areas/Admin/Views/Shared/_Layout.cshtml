<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper" >

        <div class="preloader flex-column justify-content-center align-items-center">
            <img class="animation__shake" src="~/wwwroot/images/LOGO.PNG" alt="AdminLTELogo" height="60" width="60">
        </div>

        <nav class="main-header navbar navbar-expand navbar-white navbar-light" style="color:red;font-weight:bold;opacity:1">

            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="@Url.Action("DangXuat","DangNhap")" class="nav-link" title="Đăng xuất" >
                        <i class="mdi mdi-logout text-primary"></i>
                        Đăng xuất
                    </a>
                </li>

            </ul>

            <ul class="navbar-nav ml-auto">

                <li class="nav-item">
                    <a class="nav-link" data-widget="navbar-search" href="#" role="button">
                        <i class="fas fa-search"></i>
                    </a>
                    <div class="navbar-search-block">
                        <form class="form-inline">
                            <div class="input-group input-group-sm">
                                <input class="form-control form-control-navbar" type="search" placeholder="Search" aria-label="Search">
                                <div class="input-group-append">
                                    <button class="btn btn-navbar" type="submit">
                                        <i class="fas fa-search"></i>
                                    </button>
                                    <button class="btn btn-navbar" type="button" data-widget="navbar-search">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </li>




                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>

            </ul>
        </nav>


        <aside class="main-sidebar sidebar-dark-primary elevation-4">

            <a href="@Url.Action("Index","Home")" class="brand-link">
                <img src="~/Areas/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
                     style="opacity: .8">
                <span class="brand-text font-weight-light">Admin</span>
            </a>

            <div class="sidebar">

                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    @{
                        string img = "~/wwwroot/images/TaiKhoan/" + Session["AnhAdmin"];
                    }
                    <img src="@Url.Content(img)"
                         alt="profile" />
                    <span class="nav-profile-name" style="color:white">@Session["HoTenAdmin"]</span>
                </div>



                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">

                        <li class="nav-item menu-open">

                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index","Home")" class="nav-link">
                                <i class="nav-icon fas fa-th"></i>
                                <p>
                                    Bảng điều khiển

                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index","SanPhams")" class="nav-link">
                                <i class="nav-icon fas fa-copy"></i>
                                <p>
                                    Quản lí sản phẩm

                                </p>
                            </a>

                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index","DanhMucSPs")" class="nav-link">
                                <i class="nav-icon fas fa-chart-pie"></i>
                                <p>
                                    Quản lí danh mục

                                </p>
                            </a>

                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index","HoaDons")" class="nav-link">
                                <i class="nav-icon fas fa-tree"></i>
                                <p>
                                    Quản lí hóa đơn

                                </p>
                            </a>

                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index","TaiKhoans")" class="nav-link">
                                <i class="nav-icon fas fa-edit"></i>
                                <p>
                                    Quản lí tài khoản

                                </p>
                            </a>

                        </li>

                    </ul>
                </nav>

            </div>

        </aside>

        <div class="content-wrapper">

            @RenderBody()



        </div>





    </div>


    <script src="~/Areas/plugins/jquery/jquery.min.js"></script>

    <script src="~/Areas/plugins/jquery-ui/jquery-ui.min.js"></script>

    <script>$.widget.bridge('uibutton', $.ui.button)</script>

