    <script src="~/Areas/plugins/jquery-knob/jquery.knob.min.js"></script>

    <script src="~/Areas/plugins/moment/moment.min.js"></script>
    <script src="~/Areas/plugins/daterangepicker/daterangepicker.js"></script>

    <script src="~/Areas/plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>

    <script src="~/Areas/plugins/summernote/summernote-bs4.min.js"></script>

    <script src="~/Areas/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>

    <script src="~/Areas/dist/js/adminlte.js?v=3.2.0"></script>

    @*Lọc*@
